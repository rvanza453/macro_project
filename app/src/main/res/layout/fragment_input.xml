<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".FragmentInput"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".FragmentInput"
        android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:layout_gravity="top"
        android:scaleType="fitXY"
        android:src="@drawable/header"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:src="@drawable/input_income"
                android:background="@android:color/transparent"
                android:layout_marginLeft="20dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:src="@drawable/input_outcome"
                android:background="@android:color/transparent"
                android:layout_marginLeft="10dp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanggal"
            android:fontFamily="@font/poppins_medium"
            android:textStyle="bold"
            android:textSize="17dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="masukkan tanggal disini"
            android:layout_margin="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Akun"
            android:fontFamily="@font/poppins_medium"
            android:textStyle="bold"
            android:textSize="17dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/kas"
                android:background="@android:color/transparent"
                android:layout_marginLeft="30dp"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/akun"
                android:background="@android:color/transparent"
                android:layout_marginLeft="10dp"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/kartu"
                android:background="@android:color/transparent"
                android:layout_marginLeft="7dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Kategori"
            android:fontFamily="@font/poppins_medium"
            android:textStyle="bold"
            android:textSize="17dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:background="@drawable/rectangle137"
                android:src="@drawable/solar_cartlineduotone"
                android:layout_marginLeft="25dp" />

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:background="@drawable/rectangle138"
                android:src="@drawable/ic_outlinefastfood"
                android:layout_marginLeft="20dp" />

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:background="@drawable/rectangle139"
                android:src="@drawable/materialsymbols_transportationoutline"
                android:layout_marginLeft="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:background="@drawable/rectangle140"
                android:src="@drawable/solar_cashoutbroken"
                android:layout_marginLeft="25dp" />

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:background="@drawable/rectangle141"
                android:src="@drawable/pepiconspencil_electricity"
                android:layout_marginLeft="20dp" />

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:background="@drawable/rectangle142"
                android:src="@drawable/streamline_healthmedicalheartrate"
                android:layout_marginLeft="20dp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Jumlah"
            android:fontFamily="@font/poppins_medium"
            android:textStyle="bold"
            android:textSize="17dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Jumlah pengeluaran"
            android:layout_margin="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Catatan"
            android:fontFamily="@font/poppins_medium"
            android:textStyle="bold"
            android:textSize="17dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:hint="tambahkan catatan"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_submit"
            android:background="@android:color/transparent"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</LinearLayout>
</ScrollView>